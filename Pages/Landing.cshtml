@page "Landing/{name}"
@model mhmdhidry.Pages.LandingModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="fa">

<head>
	<meta charset="utf-8" />
	<meta name="author" content="" />
	<meta name="viewport"
		  content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />

	<title>@ViewData["title"]</title>

	<!-- Custom CSS -->
	<link href="/assets/css/styles.css" rel="stylesheet">

	<!-- Custom Color Option -->
	<link href="/assets/css/colors.css" rel="stylesheet">

	<style>
		.bg-light {
			background: #FFEFBA;
			background: -webkit-linear-gradient(to right, #FFFFFF, #ddd);
			background: linear-gradient(to right, #FFFFFF, #ddd);
		}
		.vh-100{
			height: 100vh
		}
	</style>
</head>

<body class="red-skin rtl">

	<!-- ============================================================== -->
	<!-- Preloader - style you can find in spinners.css -->
	<!-- ============================================================== -->
	<div id="preloader">
		<div class="preloader"><span></span><span></span></div>
	</div>


	<!-- ============================================================== -->
	<!-- Main wrapper - style you can find in pages.scss -->
	<!-- ============================================================== -->
	<div id="main-wrapper">


		<!-- End Navigation -->
		<div class="clearfix"></div>
		<!-- ============================================================== -->
		<!-- Top header  -->
		<!-- ============================================================== -->
		<!-- ============================ Agency List Start ================================== -->
		@{
			if (Model.IsPost)
			{
				<section class="d-flex align-items-center vh-100">
					<div class="container well">
						<div class="row justify-content-center">
							@{
								if (Library.GetSession(HttpContext, "LndUseConfirm").ToBoolean())
									{
									<form asp-page-handler="SubmitCode" method="post">
										<input type="hidden" name="LndCode" class="form-control simple" value="@ViewData["LndCode"]">
										<div class="col-12 alert alert-primary text-lg-center">لطفا کد ارسال شده را در کادر زیر وارد کنید:</div>
										<div class="input-group justify-content-center m-2 b-0">
											<div class="input-group-prepend">
												<input class="form-control" id="CrgSecurityCode" name="CrgSecurityCode" />
											</div>
											<button class="btn btn-theme">ثبت</button>
										</div>
									</form>
								}
								else
								{
									<div class="col-12 alert alert-success text-lg-center">@Html.Raw(Library.GetSession(HttpContext, "Message"))</div>
									
										@if ((Library.GetSession(HttpContext, "LndDesc") ?? string.Empty) != string.Empty)
										{
										<div class="col-12 text-lg-center mb-3 btn btn-success">@Html.Raw(Library.GetSession(HttpContext, "LndDesc"))</div>
										}
									<a class="btn btn-primary" href="@ViewData["PageUrl"]">بازگشت به صفحه قبل</a>
								}
							}
						</div>
					</div>
				</section>
			}
			else
			{
				<section class="bg-light">
					<div class="container">




						<video class="col-12" poster="@ViewData["LndPoster"]" controls>
							<source src="@ViewData["LndVideo"]" type="video/mp4">
							Your browser does not support the video tag.
						</video>

						<div class="row justify-content-center">
							<div class="col-lg-5 col-md-6 col-sm-12">
								<div class="sec-heading center">
									<h2>@ViewData["Title"]</h2>
								</div>
							</div>
						</div>

						<!-- row Start -->
						<div class="row">
							<div class="col-lg-8 col-md-7">
								<div class="prc_wrap">

									<div class="prc_wrap_header">
										<h4 class="property_block_title"> فرم درخواست پیش ثبت نام </h4>
									</div>

									<form asp-page-handler="SubmitRegister" method="post">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<input asp-for="coursRegister.CrgLndCode" type="hidden" class="form-control simple" value="@ViewData["CrgLndCode"]">
										<div class="prc_wrap-body">
											<div class="form-group">
												<label asp-for="coursRegister.CrgFullName"></label>
												<input asp-for="coursRegister.CrgFullName" type="text" class="form-control simple">
												<span asp-validation-for="coursRegister.CrgFullName" class="text-danger"></span>
											</div>
											<div class="form-group">
												<label asp-for="coursRegister.CrgMobile"></label>
												<input asp-for="coursRegister.CrgMobile" type="text" class="form-control simple">
												<span asp-validation-for="coursRegister.CrgMobile" class="text-danger"></span>
											</div>

											<div class="form-group">
												<button class="btn btn-theme" type="submit">ارسال درخواست</button>
											</div>
										</div>
									</form>


								</div>

							</div>

							<div class="col-lg-4 col-md-5">

								<div class="prc_wrap">

									<div class="prc_wrap_header">
										<h4 class="property_block_title">درباره</h4>
									</div>

									<div class="prc_wrap-body">
										<div class="contact-info">

											<h2>محمد حیدری</h2>
											<div class="cn-info-detail">
												<div class="cn-info-icon">
													<i class="ti-timer"></i>
												</div>
												<div class="cn-info-content">
													سابقه برنامه نویسی از سال 1383
												</div>
											</div>

											<div class="cn-info-detail">
												<div class="cn-info-icon">
													<i class="ti-medall"></i>
												</div>
												<div class="cn-info-content">
													تولید کننده نرم افزار های سازمانی و تجاری
												</div>
											</div>

											<div class="cn-info-detail">
												<div class="cn-info-icon">
													<i class="ti-desktop"></i>
												</div>
												<div class="cn-info-content">
													برنامه نویسی وب و موبایل و دسکتاپ
												</div>
											</div>

											<div class="cn-info-detail">
												<div class="cn-info-icon">
													<i class="ti-crown"></i>
												</div>
												<div class="cn-info-content">
													کارشناس نرم افزار
												</div>
											</div>

											@*<div class="cn-info-detail">
									<div class="cn-info-icon">
									<i class=" ti-headphone-alt "></i>
									</div>
									<div class="cn-info-content">
									09377375756
									</div>
									</div>*@

										</div>
									</div>
								</div>

							</div>

						</div>
						<!-- /row -->

					</div>
				</section>
			}
		}

		

		
		<!-- ============================ Agency List End ================================== -->
		<!-- ============================== Start Newsletter ================================== -->
		<!-- ================================= End Newsletter =============================== -->
		<!-- ============================ Footer Start ================================== -->
		<!-- ============================ Footer End ================================== -->
		<!-- Log In Modal -->



	</div>
	<!-- ============================================================== -->
	<!-- End Wrapper -->
	<!-- ============================================================== -->
	<!-- ============================================================== -->
	<!-- All Jquery -->
	<!-- ============================================================== -->
	<script src="~/assets/js/jquery.min.js"></script>
	<script src="~/assets/js/popper.min.js"></script>
	<script src="~/assets/js/bootstrap.min.js"></script>
	<script src="~/assets/js/select2.min.js"></script>
	<script src="~/assets/js/slick.js"></script>
	<script src="~/assets/js/jquery.counterup.min.js"></script>
	<script src="~/assets/js/counterup.min.js"></script>
	<script src="~/assets/js/custom.js"></script>
	<!-- ============================================================== -->
	<!-- This page plugins -->
	<!-- ============================================================== -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/sweetalert2.js"></script>
	<script src="~/js/site.js"></script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
		if (TempData["Error"] != null)
		{
			<script>
				error("@Html.Raw(TempData["Error"])");
			</script>
		}
		if (TempData["Success"] != null)
		{
			<script>
				success("@Html.Raw(TempData["Success"])");
			</script>
		}
	}
</body>

</html>