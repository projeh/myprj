@page
@model LoginModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html direction="rtl" dir="rtl" style="direction: rtl">
<head>
	<meta charset="utf-8" />
	<title>ورود به سیستم</title>
	<meta name="description" content="Login page example" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<link href="../admin/css/plugins.bundle.rtl.css?v=7.0.6" rel="stylesheet" type="text/css" />
	<link href="../admin/css/login.rtl.css?v=7.0.6" rel="stylesheet" type="text/css" />
	<link href="../admin/css/style.bundle.rtl.css?v=7.0.6" rel="stylesheet" type="text/css" />
	<link rel="shortcut icon" href="../admin/media/logos/favicon.ico" />
</head>
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
	<div class="d-flex flex-column flex-root">
		<!--begin::Login-->
		<div class="login login-5 login-signin-on d-flex flex-row-fluid" id="kt_login">
			<div class="d-flex flex-center bgi-size-cover bgi-no-repeat flex-row-fluid" style="background-image: url(../admin/img/bg-login.jpg);">
				<div class="login-form text-center text-white p-7 position-relative overflow-hidden">
					<!--begin::Login Header-->
					<div class="d-flex flex-center mb-15">
						<a href="#">
							<img src="../admin/img/logo.png" class="max-h-75px" alt="" />
						</a>
					</div>
					<!--end::Login Header-->
					<!--begin::Login Sign in form-->
					<div class="login-signin">
						<div class="mb-20">
							<h3 class="opacity-40 font-weight-normal">ورود به پنل مدیریت</h3>
							<p class="opacity-40">نام کاربری و کلمه عبور خود را وارد کنید</p>
						</div>
						<form asp-page-handler="Login" class="form" id="form-login" method="post">
							<input type="hidden" value="@ViewData["ReturnUrl"]" name="returnUrl" />
							<div class="form-group">
								<input id="input-login-username" class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="text" placeholder="نام کاربری" name="username" autocomplete="off" />
							</div>
							<div class="form-group">
								<input id="input-login-password" class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="password" placeholder="کلمه عبور" name="password" />
							</div>
							<div class="form-group d-flex flex-wrap justify-content-between align-items-center px-8 opacity-60">
								<div class="checkbox-inline">
									<label class="checkbox checkbox-outline checkbox-white text-white m-0">
										<input type="checkbox" name="remember" />
										<span></span>
										مرا به خاطر بسپار
									</label>
								</div>
								<a href="javascript:;" id="kt_login_forgot" class="text-white font-weight-bold">کلمه عبور را فراموش کرده اید؟</a>
							</div>
							<div class="form-group text-center mt-10">
								<button id="btn-submit-login" class="btn btn-pill btn-primary opacity-90 px-15 py-3">ورود</button>
							</div>
						</form>
						<div class="mt-10">
							<span class="opacity-40 mr-4">
								حساب کاربری ندارید؟
							</span>
							<a href="javascript:;" id="kt_login_signup" class="text-white opacity-30 font-weight-normal">ثبت نام</a>
						</div>
					</div>
					<!--end::Login Sign in form-->
					<!--begin::Login Sign up form-->
					<div class="login-signup">
						<div class="mb-20">
							<h3 class="opacity-40 font-weight-normal">ثبت نام</h3>
							<p class="opacity-40">برای ایجاد حساب کاربری ، جزئیات خود را وارد کنید</p>
						</div>
						<form class="form text-center" id="kt_login_signup_form">
							<div class="form-group ">
								<input class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="text" placeholder="نام و ناو خانوادگی" name="fullname" />
							</div>
							<div class="form-group">
								<input class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="text" placeholder="پست الکترونیک" name="email" autocomplete="off" />
							</div>
							<div class="form-group">
								<input class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="password" placeholder="کلمه عبور" name="password" />
							</div>
							<div class="form-group">
								<input class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="password" placeholder="تکرار کلمه عبور" name="cpassword" />
							</div>
							<div class="form-group text-left px-8">
								<div class="checkbox-inline">
									<label class="checkbox checkbox-outline checkbox-white opacity-60 text-white m-0">
										<input type="checkbox" name="agree" />
										<span></span>
										می پذیرم <a href="#" class="text-white font-weight-bold ml-1">قوانین و مقررات</a>.
									</label>
								</div>
								<div class="form-text text-muted text-center"></div>
							</div>
							<div class="form-group">
								<button id="kt_login_signup_submit" class="btn btn-pill btn-primary opacity-90 px-15 py-3 m-2">ثبت نام</button>
								<button id="kt_login_signup_cancel" class="btn btn-pill btn-outline-white opacity-70 px-15 py-3 m-2">لغو</button>
							</div>
						</form>
					</div>
					<!--end::Login Sign up form-->
					<!--begin::Login forgot password form-->
					<div class="login-forgot">
						<div class="mb-20">
							<h3 class="opacity-40 font-weight-normal">کلمه عبور خود را فراموش کرده اید؟</h3>
							<p class="opacity-40">ایمیل تان را وارد کنید تا پسوردتان ریست شود</p>
						</div>
						<form class="form" id="kt_login_forgot_form">
							<div class="form-group mb-10">
								<input class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="text" placeholder="پست الکترونیک" name="email" autocomplete="off" />
							</div>
							<div class="form-group">
								<button id="kt_login_forgot_submit" class="btn btn-pill btn-primary opacity-90 px-15 py-3 m-2">درخواست</button>
								<button id="kt_login_forgot_cancel" class="btn btn-pill btn-outline-white opacity-70 px-15 py-3 m-2">لغو</button>
							</div>
						</form>
					</div>
					<!--end::Login forgot password form-->
				</div>
			</div>
		</div>
		<!--end::Login-->
	</div>
	<!--end::Main-->
	<script src="../admin/js/plugins.bundle.js?v=7.0.6"></script>
	<script src="../admin/js/scripts.bundle.js?v=7.0.6"></script>
	@*<script src="../admin/js/login.js?v=7.0.6"></script>*@

	<script>
		function error(text) {
			swal.fire({
				text: text,
				icon: "error",
				buttonsStyling: false,
				confirmButtonText: "بستن",
				customClass: {
					confirmButton: "btn font-weight-bold btn-light-primary"
				}
			}).then(function () {
				KTUtil.scrollTop();
			});
		}

		const formLogin = document.querySelector("#form-login");
		const btnSubmitLogin = document.querySelector("#btn-submit-login");
		btnSubmitLogin.addEventListener("click", login, false);
		function login(event) {
				event.preventDefault();
				if(document.getElementById("input-login-username").value==""){
				error("لطفا نام کاربری را وارد کنید.");
				}
				else if(document.getElementById("input-login-password").value==""){
				error("لطفا رمز عبور را وارد کنید.");
				}
				else{
					formLogin.submit();
				}
			}

	</script>
	@{
		if (Model.hasError)
		{
			<script>
				error("نام کاربری یا رمز عبور اشتباه است.");
			</script>
		}

	}


</body>
<!--end::Body-->
</html>

