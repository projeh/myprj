						</div>
*@

							<div class="form-group col-md-6">
								<label>وضعیت</label>
								<input asp-for="status" value="@ViewData["status"]" class="form-control" placeholder="وضعیت">

							</div>
							<div class="form-group col-md-6">
								<label>مدت زمان</label>
								<input asp-for="Pkg_dur" value="@ViewData["Pkg_dur"]" class="form-control" placeholder="مدت زمان">

							</div>




						<div class="form-group col-md-6">
							<label>برچسب</label>
							<input asp-for="Pkg_tag" class="form-control" placeholder="برچسب">

						</div>

						<div class="form-group col-md-6">
