						</div>

						<div class="form-group col-md-6">
							<label>قیمت</label>
								<input asp-for="Pkg_Price" value="@ViewData["Pkg_Price"]" class="form-control" placeholder="قیمت">

						</div>

					@*	<div class="form-group col-md-6">
